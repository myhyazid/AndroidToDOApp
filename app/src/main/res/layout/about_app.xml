<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#2196F3"
        android:layout_row="0"
        android:layout_column="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About this app..."
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_row="1"
        android:layout_column="0">

        <TextView
            android:layout_width="338dp"
            android:layout_height="128dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="This app was developed for the &quot;Brewing with Android&quot; Course with Google Student Ambassador ( GSA Malaysia )"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#795548"
        android:layout_row="2"
        android:layout_column="0" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="This app was developed by :"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </FrameLayout>

    <ImageView
        android:layout_width="203dp"
        android:layout_height="126dp"
        android:id="@+id/imageView"
        android:layout_row="3"
        android:layout_column="0"
        android:src="@drawable/myhyazid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Â© 2015 Muhammad Yusry Hadi ( Myhyazid )"
        android:id="@+id/textView5"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="10dp" />

</GridLayout>
